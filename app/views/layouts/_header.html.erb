      <ul class="nav navbar-nav navbar-right">
        <% unless logged_in? %>
            <li><%= link_to "Inicial", root_path %></li>
        <% end %>
        <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Comunidade <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Usuários", users_path %></li>
