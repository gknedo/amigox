<% exchanges_invite = Exchange.exchanges_administered_by(@current_user) %>
<% unless exchanges_invite.empty? %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapseInviteSend">Convidar Todos</a>
        </h4>
      </div>
      <div id="collapseInviteSend" class="panel-collapse collapse">
        <div class="panel-body">
          <% exchanges_invite.each do |exchanges_current| %>
              <div class="row">
                <div class="col-sm-2">
                  <%= link_to "Convidar", invite_all_exchange_path(exchanges_current,group: @group), class: 'btn btn-success btn-block', data: {confirm: "Deseja mesmo convidar todos os participantes desse grupo para o amigo secreto?"} %>
                </div>
                <div class="col-sm-10">
                  <p><%= exchanges_current.title %></p>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
<% end %>