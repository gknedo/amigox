<% if @exchange.raffled? && @exchange.have_user_as?(@current_user, 'participants') %>
    <% raffles = Raffle.from_exchange(@exchange, @current_user) %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapseUser">Ver Meu Amigo Secreto</a>
        </h4>
      </div>
      <div id="collapseUser" class="panel-collapse collapse">
        <div class="panel-body">
          <% raffles.each do |raffle| %>
              <div class="row" align="center">
                <%= link_to(gravatar_for(User.find(raffle.gift_to), size: 50), User.find(raffle.user)) %><br>
                <%= User.find(raffle.gift_to).name %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
<% end %>