<% invites_received = Group.group_as_guest(@user) %>
<% unless !current_user?(@user) || invites_received.empty? %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapseGroupInvitesReceived">Convites Recebidos para Grupos</a>
        </h4>
      </div>
      <div id="collapseGroupInvitesReceived" class="panel-collapse collapse">
        <div class="panel-body">
          <% invites_received.each do |groups_current| %>
              <div class="row">
                <div class="col-sm-2">
                  <%= link_to "Aceitar", invite_accept_group_path(group_current, user: @user), class: 'btn btn-success btn-block', data: {confirm: "Deseja mesmo participar deste grupo?"}, method: 'post' %>
                </div>
                <div class="col-sm-10">
                  <p><%= link_to groups_current.title, groups_current %></p>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
<% end %>