<% groups_invite = Group.groups_to_invite(@current_user, @user) %>
<% unless groups_invite.empty? %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapseGroupInviteSend">Convidar para Grupo</a>
        </h4>
      </div>
      <div id="collapseGroupInviteSend" class="panel-collapse collapse">
        <div class="panel-body">
          <% groups_invite.each do |groups_current| %>
              <div class="row">
                <div class="col-sm-2">
                  <%= link_to "Convidar", invite_send_group_path(groups_current, user: @user), class: 'btn btn-success btn-block', data: {confirm: "Deseja mesmo convidar esta pessoa para o grupo?"}, method: 'post' %>
                </div>
                <div class="col-sm-10">
                  <p><%= link_to groups_current.title, groups_current %></p>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
<% end %>