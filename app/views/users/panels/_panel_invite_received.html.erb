<% invites_received = Exchange.exchanges_as_guest(@user) %>
<% unless !current_user?(@user) || invites_received.empty? %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapseInvitesReceived">Convites Recebidos</a>
        </h4>
      </div>
      <div id="collapseInvitesReceived" class="panel-collapse collapse">
        <div class="panel-body">
          <% invites_received.each do |exchanges_current| %>
              <div class="row">
                <div class="col-sm-2">
                  <%= link_to "Aceitar", invite_accept_exchange_path(exchanges_current, user: @user), class: 'btn btn-success btn-block', data: {confirm: "Deseja mesmo participar deste amigo secreto?"}, method: 'post' %>
                </div>
                <div class="col-sm-10">
                  <p><%= exchanges_current.title %></p>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
<% end %>