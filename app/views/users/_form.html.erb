<%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: @user %>

    <%= f.label 'Nome:' %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label 'Email:' %>
    <%= f.email_field :email, class: 'form-control' %>

    <div class="row">
      <div class="col-sm-10">
        <%= f.label 'Endereço:' %>
        <%= f.text_field :address_street, class: 'form-control' %>
      </div>

      <div class="col-sm-2">
        <%= f.label 'Número' %>
        <%= f.text_field :address_number, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8">
        <%= f.label 'Complemento:' %>
        <%= f.text_field :address_aditional, class: 'form-control' %>
      </div>
      <div class="col-sm-4">
        <%= f.label 'CEP:' %>
        <%= f.text_field :address_zip, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-5">
        <%= f.label 'Cidade:' %>
        <%= f.text_field :address_city, class: 'form-control' %>
      </div>
      <div class="col-sm-3">
        <%= f.label 'Estado:' %>
        <%= f.text_field :address_state, class: 'form-control' %>
      </div>

      <div class="col-sm-4">

        <%= f.label 'País:' %>
        <%= f.text_field :address_country, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= f.label 'Senha:' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="col-sm-6">
        <%= f.label 'Confirmação da senha:' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>