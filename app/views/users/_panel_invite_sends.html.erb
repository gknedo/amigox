<% exchanges_invite = Exchange.exchanges_to_invite(@current_user,@user) %>
<% unless exchanges_invite.empty? %>
    <div class="panel-group ">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" href="#collapse1">Convidar para amigo secreto</a>
          </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse">
          <%= form_for(:invite, url: '#') do |f| %>
              <div class="panel-body">
                <% exchanges_invite.each do |exchanges_current| %>
                    <div class="row">
                      <div class="col-sm-1">
                        <%= link_to "Convidar", invite_send_exchange_path(exchanges_current, user: @user) %>
                      </div>
                      <div class="col-sm-10">
                        <span><%= exchanges_current.title %></span>
                      </div>
                    </div>
                <% end %>
              </div>
              <div class="panel-footer">
              </div>
              </div>
          <% end %>
          </div>
    </div>
<% end %>